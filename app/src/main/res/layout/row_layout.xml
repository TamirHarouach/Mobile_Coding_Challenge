<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/repo_name"
            style="@style/text"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/MargLeft"
            android:text="Repo_name"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/repo_description"
            style="@style/text"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/MargLeft"
            android:text="Description"
            android:textColor="@color/colordescrtiption"
            android:textSize="18sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/MargLeft">
                <ImageView
                    android:id="@+id/repo_owner_avatar"
                    android:background="@android:drawable/sym_def_app_icon"
                    style="@style/imgStyle"
                    />
                <TextView
                    android:id="@+id/repo_owner_name"
                    style="@style/text"
                    android:text="rapo_owner_name"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp">
                    <ImageView
                        android:id="@+id/star"
                        android:background="@drawable/ic_star"
                        style="@style/imgStyle"/>
                    <TextView
                            android:id="@+id/number_stars"
                            style="@style/text"
                            android:text="[Number of stars]"
                            android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>